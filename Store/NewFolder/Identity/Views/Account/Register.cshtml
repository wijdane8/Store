@model Store.Areas.Identity.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "تسجيل"; // Registration
    Layout = "_Layout"; // Ensure you have a proper layout

}

<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="info-item" style="padding: 40px; border-radius: 8px;">
                    <div class="section-title text-center mb-4">
                        <h2>@ViewData["Title"]</h2>
                        <p>أنشئ حسابك الجديد</p> <!-- Create your new account -->
                    </div>


                    <form asp-area="Identity" asp-controller="Account" asp-action="Register" method="post" >

                            @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="php-email-form .error-message mb-4" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" autocomplete="email" placeholder="user@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserName" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="UserName" class="form-control" autocomplete="username" placeholder="username" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary py-2" style="background-color: var(--accent-color); border: none;">
                                <i class="bi bi-person-plus me-2"></i> تسجيل
                            </button>
                        </div>

                        <div class="text-center pt-3">
                            <p class="mb-0">
                                <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="fw-bold" style="color: var(--accent-color);">
                                    تسجيل الدخول
                                </a>
                                لديك حساب بالفعل؟ 

                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}