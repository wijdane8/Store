@{
    ViewData["Title"] = "Our Team";
}

<!-- Team Section -->
<section id="team" class="section team-section ">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>فريقنا</h2>
            <p>تعرّف على أعضاء فريقنا المتفانين.</p>
        </div>

        <!-- Team Grid Layout -->
        <div class="team-grid">
            <!-- Team Member 1 -->
            <div class="team-member-card">
                <div class="member-img">
                    <img src="https://img.freepik.com/premium-photo/realistic-women-portrait-generative-ai_259696-2368.jpg" alt="وجدَان الحربي" class="img-fluid rounded-circle">
                </div>
                <div class="member-info">
                    <h4>وجدَان الحربي</h4>
                    <span>الرئيس التنفيذي</span>
                    <p>قائدة ذات رؤية وشغف بالابتكار.</p>
                    <div class="social">
                        <a href="https://www.facebook.com/" target="_blank" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://twitter.com/" target="_blank" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="https://www.instagram.com/" target="_blank" title="Instagram"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <!-- Team Member 2 -->
            <div class="team-member-card">
                <div class="member-img">
                    <img src="https://th.bing.com/th/id/OIP.N-3Cpr8A5NlbMEKaCVGpXQHaHa?cb=iwc2&rs=1&pid=ImgDetMain" alt="خالد الحجيري" class="img-fluid rounded-circle">
                </div>
                <div class="member-info">
                    <h4>خالد الحجيري</h4>
                    <span>المدير التقني</span>
                    <p>خبير تقني ومهندس حلولنا المتطورة.</p>
                    <div class="social">
                        <a href="https://www.facebook.com/" target="_blank" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://twitter.com/" target="_blank" title="Twitter"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>

            <!-- Team Member 3 -->
            <div class="team-member-card">
                <div class="member-img">
                    <img src="https://th.bing.com/th/id/OIP.yTgFJyXmgPo0a5ia9EB4AQHaHa?cb=iwc2&rs=1&pid=ImgDetMain" alt="يوسف الحجييري" class="img-fluid rounded-circle">
                </div>
                <div class="member-info">
                    <h4>يوسف الحجيري</h4>
                    <span>مدير التسويق</span>
                    <p>مخطط استراتيجي مبدع يقود نجاح علامتنا التجارية.</p>
                    <div class="social">
                        <a href="https://twitter.com/" target="_blank" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="https://www.instagram.com/" target="_blank" title="Instagram"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <!-- Team Member 4 -->
            <div class="team-member-card">
                <div class="member-img">
                    <img src="https://placehold.co/300x300/EEE/31343C" alt="منى عبد السلام" class="img-fluid rounded-circle">
                </div>
                <div class="member-info">
                    <h4>منى عبد السلام</h4>
                    <span>مديرة المبيعات</span>
                    <p>خبيرة في بناء علاقات قوية مع العملاء.</p>
                    <div class="social">
                        <a href="https://www.facebook.com/" target="_blank" title="Facebook"><i class="bi bi-facebook"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        AOS.init({
            duration: 800,
            easing: "ease-in-out",
            once: true,
        });
    });
</script>